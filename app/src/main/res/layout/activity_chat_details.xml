<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.tarlad.client.ui.views.chat.details.ChatDetailsViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/create_chat_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include app:title="@{vm.toolbarTitle}" android:id="@+id/toolbarInclude" layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_title"
                android:layout_marginEnd="12dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/chat_title"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@={vm.chatTitle}"
                android:hint="@string/add_title"
                android:textColorHint="@color/editText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/participants"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/add_participants"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="24dp"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textColor="@drawable/button_send"
                android:textSize="18sp"
                android:onClick="openAddParticipants"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/participants_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:text="@string/leave_chat"
            android:textColor="@color/redLight"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:onClick="showLeaveAlertDialog"/>
    </LinearLayout>

</layout>
